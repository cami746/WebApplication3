@model IEnumerable<WebApplication3.Models.SubcategoriaProducto>
@{
    ViewData["Title"] = "Subcategorías de Productos";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-layer-group"></i> Subcategorías</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nueva Subcategoría
        </a>
    </div>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-img-top-container">
                        @if (!string.IsNullOrEmpty(item.ImagenUrl))
                        {
                            <img src="@Url.Content(item.ImagenUrl)" class="card-img-top" alt="@item.Nombre">
                        }
                        else
                        {
                            <img src="~/images/no-image.png" class="card-img-top" alt="Sin imagen">
                        }
                        <div class="category-badge">
                            <i class="fas fa-folder"></i> @item.CategoriaProducto.Nombre
                        </div>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@item.Nombre</h5>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <div class="btn-group w-100">
                            <a asp-action="Edit" asp-route-id="@item.SubcategoriaProductoId"
                               class="btn btn-outline-primary" title="Editar">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.SubcategoriaProductoId"
                               class="btn btn-outline-info" title="Detalles">
                                <i class="fas fa-info-circle"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.SubcategoriaProductoId"
                               class="btn btn-outline-danger" title="Eliminar">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card {
        border: none;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        transition: transform 0.2s;
        border-radius: 8px;
        overflow: hidden;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

    .card-img-top-container {
        position: relative;
        height: 200px;
        overflow: hidden;
    }

    .card-img-top {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .category-badge {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(0,0,0,0.7);
        color: white;
        padding: 8px;
        font-size: 0.9em;
    }

    .btn-group {
        gap: 5px;
    }

    .card-title {
        color: #6b4e3a;
        margin-bottom: 0;
        font-weight: 500;
    }

    .alert {
        border-radius: 8px;
    }
</style>