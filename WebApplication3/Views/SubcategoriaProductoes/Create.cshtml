@model WebApplication3.Models.SubcategoriaProducto
@{
    ViewData["Title"] = "Nueva Subcategoría";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center mb-0">
                        <i class="fas fa-plus-circle"></i> Nueva Subcategoría
                    </h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label">
                                <i class="fas fa-tag"></i> Nombre
                            </label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoriaProductoId" class="form-label">
                                <i class="fas fa-folder"></i> Categoría
                            </label>
                            <select asp-for="CategoriaProductoId" class="form-select"
                                    asp-items="ViewBag.CategoriaProductoId">
                                <option value="">-- Seleccione una categoría --</option>
                            </select>
                            <span asp-validation-for="CategoriaProductoId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="fas fa-image"></i> Imagen
                            </label>
                            <input type="file" name="imagen" class="form-control" accept="image/*" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Guardar
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Volver a la lista
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        border-radius: 8px;
        margin-top: 20px;
    }

    .card-header {
        background-color: #e7d6b4;
        color: #6b4e3a;
        padding: 1rem;
    }

    .form-label {
        color: #6b4e3a;
        font-weight: 500;
    }

    .form-control:focus,
    .form-select:focus {
        border-color: #d5c7a0;
        box-shadow: 0 0 0 0.25rem rgba(213, 199, 160, 0.25);
    }

    .btn-primary {
        background-color: #d5c7a0;
        border-color: #b8a98e;
        color: #6b4e3a;
    }

        .btn-primary:hover {
            background-color: #b8a98e;
            border-color: #a69070;
            color: #3b2a1c;
        }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('.form-select').select2({
                theme: 'bootstrap-5'
            });
        });
    </script>
}