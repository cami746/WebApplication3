<!-- Edit.cshtml -->
@model WebApplication3.Models.TipoDeSubastum
@{
    ViewData["Title"] = "Editar Tipo de Subasta";
}

<div class="auction-container">
    <div class="auction-header">
        <h1><i class="fas fa-edit"></i> Editar Tipo de Subasta</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="auction-form">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="TipoDeSubastaId" />

                    <div class="form-group mb-4">
                        <label asp-for="Nombre" class="form-label">
                            <i class="fas fa-tag"></i> Nombre del Tipo
                        </label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-auction me-2">
                            <i class="fas fa-save"></i> Guardar
                        </button>
                        <a asp-action="Index" class="auction-link">
                            <i class="fas fa-arrow-left"></i> Volver al Listado
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>