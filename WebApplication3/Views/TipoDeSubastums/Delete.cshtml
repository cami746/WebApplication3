<!-- Delete.cshtml -->
@model WebApplication3.Models.TipoDeSubastum
@{
    ViewData["Title"] = "Eliminar Tipo de Subasta";
}

<div class="auction-container">
    <div class="auction-header">
        <h1><i class="fas fa-trash-alt"></i> Eliminar Tipo de Subasta</h1>
        <h3 class="text-danger mt-3">¿Está seguro que desea eliminar este tipo de subasta?</h3>
    </div>

    <div class="auction-form">
        <dl class="row">
            <dt class="col-sm-3">
                <i class="fas fa-tag"></i> @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
        </dl>

        <form asp-action="Delete" class="text-center mt-4">
            <input type="hidden" asp-for="TipoDeSubastaId" />
            <button type="submit" class="btn btn-danger me-2">
                <i class="fas fa-trash"></i> Confirmar Eliminación
            </button>
            <a asp-action="Index" class="auction-link">
                <i class="fas fa-arrow-left"></i> Volver al Listado
            </a>
        </form>
    </div>
</div>