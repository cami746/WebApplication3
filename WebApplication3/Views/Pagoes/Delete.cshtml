@* Delete.cshtml *@
@model WebApplication3.Models.Pago
@{
    ViewData["Title"] = "Eliminar Pago - Subastas";
}

<div class="auction-header">
    <h1><i class="fas fa-trash-alt"></i> Eliminar Pago</h1>
    <h3 class="text-danger">¿Está seguro que desea eliminar este pago?</h3>
</div>

<div class="auction-table p-4">
    <dl class="row">
        <dt class="col-sm-3">
            <i class="fas fa-dollar-sign"></i> Monto
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Monto)
        </dd>

        <dt class="col-sm-3">
            <i class="far fa-calendar-alt"></i> Fecha de Pago
        </dt>
        <dd class="col-sm-9">
            @Model.FechaPago.ToString("dd/MM/yyyy HH:mm")
        </dd>

        <dt class="col-sm-3">
            <i class="fas fa-user"></i> Participante
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Inscripcion.Usuario.Nombre)
            @Html.DisplayFor(model => model.Inscripcion.Usuario.Apellido)
        </dd>
    </dl>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="PagoId" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i> Confirmar Eliminación
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Volver al Listado
        </a>
    </form>
</div>