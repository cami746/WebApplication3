@* Details.cshtml *@
@model WebApplication3.Models.Pago
@{
    ViewData["Title"] = "Detalles del Pago - Subastas";
}

<div class="auction-header">
    <h1><i class="fas fa-info-circle"></i> Detalles del Pago</h1>
</div>

<div class="auction-table p-4">
    <dl class="row">
        <dt class="col-sm-3">
            <i class="fas fa-dollar-sign"></i> Monto
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Monto)
        </dd>

        <dt class="col-sm-3">
            <i class="far fa-calendar-alt"></i> Fecha de Pago
        </dt>
        <dd class="col-sm-9">
            @Model.FechaPago.ToString("dd/MM/yyyy HH:mm")
        </dd>

        <dt class="col-sm-3">
            <i class="fas fa-user"></i> Participante
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Inscripcion.Usuario.Nombre)
            @Html.DisplayFor(model => model.Inscripcion.Usuario.Apellido)
        </dd>
    </dl>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.PagoId" class="btn btn-auction">
            <i class="fas fa-edit"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Volver al Listado
        </a>
    </div>
</div>
