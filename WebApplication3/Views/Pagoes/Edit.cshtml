@* Edit.cshtml *@
@model WebApplication3.Models.Pago
@{
    ViewData["Title"] = "Editar Pago - Subastas";
}

<div class="auction-header">
    <h1><i class="fas fa-edit"></i> Editar Pago</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="auction-table p-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PagoId" />

                <div class="form-group mb-3">
                    <label asp-for="Monto" class="control-label">
                        <i class="fas fa-dollar-sign"></i> Monto del Pago
                    </label>
                    <input asp-for="Monto" class="form-control" />
                    <span asp-validation-for="Monto" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FechaPago" class="control-label">
                        <i class="far fa-calendar-alt"></i> Fecha de Pago
                    </label>
                    <input asp-for="FechaPago" class="form-control" type="datetime-local" />
                    <span asp-validation-for="FechaPago" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="InscripcionId" class="control-label">
                        <i class="fas fa-user"></i> Participante
                    </label>
                    <select asp-for="InscripcionId" class="form-control" asp-items="ViewBag.InscripcionId"></select>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-auction">
                        <i class="fas fa-save"></i> Guardar Cambios
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Volver al Listado
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
