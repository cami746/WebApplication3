@model WebApplication3.Models.Puja
@{
    ViewData["Title"] = "Eliminar Puja";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h2 class="card-title text-center mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Confirmar Eliminación
                    </h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <p>¿Está seguro que desea eliminar esta puja?</p>
                    </div>

                    <div class="info-group">
                        <label><i class="fas fa-dollar-sign"></i> Monto</label>
                        <h4 class="text-primary">@Model.Monto.ToString("C")</h4>
                    </div>

                    <div class="info-group">
                        <label><i class="far fa-clock"></i> Fecha y Hora</label>
                        <p>@Model.FechaPuja.ToString("dd/MM/yyyy HH:mm:ss")</p>
                    </div>

                    <div class="info-group">
                        <label><i class="fas fa-user"></i> Usuario</label>
                        <p>@Model.Inscripcion.Usuario.Nombre @Model.Inscripcion.Usuario.Apellido</p>
                    </div>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="PujaId" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Confirmar Eliminación
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Volver al Listado
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        border-radius: 8px;
        margin-top: 20px;
    }

    .info-group {
        margin-bottom: 1.5rem;
    }

        .info-group label {
            color: #6b4e3a;
            font-weight: 500;
            margin-bottom: 0.5rem;
        }
</style>