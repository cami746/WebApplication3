@model WebApplication3.Models.Puja
@{
    ViewData["Title"] = "Nueva Puja";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title text-center mb-0">
                        <i class="fas fa-gavel"></i> Nueva Puja
                    </h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="InscripcionId" class="form-label">Subasta</label>
                            <select asp-for="InscripcionId" class="form-select" asp-items="ViewBag.InscripcionId">
                                <option value="">Seleccione una subasta</option>
                            </select>
                            <span asp-validation-for="InscripcionId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Monto" class="form-label">Monto de la Puja</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                                <input asp-for="Monto" class="form-control" type="number" step="0.01" min="0" />
                            </div>
                            <span asp-validation-for="Monto" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-check"></i> Realizar Puja
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Volver al Listado
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        border-radius: 8px;
        margin-top: 20px;
    }

    .card-header {
        background-color: #e7d6b4;
        color: #6b4e3a;
        padding: 1rem;
    }

    .form-control:focus, .form-select:focus {
        border-color: #d5c7a0;
        box-shadow: 0 0 0 0.25rem rgba(213, 199, 160, 0.25);
    }

    .btn-primary {
        background-color: #d5c7a0;
        border-color: #b8a98e;
        color: #6b4e3a;
    }

        .btn-primary:hover {
            background-color: #b8a98e;
            border-color: #a69070;
            color: #3b2a1c;
        }

    .input-group-text {
        background-color: #e7d6b4;
        color: #6b4e3a;
        border-color: #d5c7a0;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('.form-select').select2({
                theme: 'bootstrap-5'
            });
        });
    </script>
}