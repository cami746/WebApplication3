<!-- Index.cshtml -->
@model IEnumerable<WebApplication3.Models.Usuario>
@{
    ViewData["Title"] = "Usuarios";
}

<div class="auction-container">
    <div class="auction-header">
        <h1><i class="fas fa-users"></i> Usuarios del Sistema</h1>
        <a asp-action="Create" class="btn btn-auction mt-3">
            <i class="fas fa-user-plus"></i> Nuevo Usuario
        </a>
    </div>

    <div class="auction-table">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th><i class="fas fa-user"></i> Nombre</th>
                    <th><i class="fas fa-user"></i> Apellido</th>
                    <th><i class="fas fa-envelope"></i> Email</th>
                    <th><i class="fas fa-calendar"></i> Fecha Creación</th>
                    <th><i class="fas fa-clock"></i> Último Acceso</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaCreacion)</td>
                        <td>@Html.DisplayFor(modelItem => item.UltimoAcceso)</td>
                        <td>
                            <div class="btn-group-auction justify-content-center">
                                <a asp-action="Edit" asp-route-id="@item.IdUsuario"
                                   class="btn btn-auction btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.IdUsuario"
                                   class="btn btn-auction btn-sm">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.IdUsuario"
                                   class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<!-- Estilos compartidos -->
<style>
    :root {
        --beige-light: #f5f5dc;
        --beige-medium: #e8e4d9;
        --beige-dark: #d4cdb4;
        --brown-accent: #8b7355;
        --brown-light: #a68b6c;
        --text-color: #463e3f;
    }

    body {
        background-color: var(--beige-light);
        color: var(--text-color);
        font-family: 'Georgia', serif;
    }

    .auction-container {
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        padding: 2rem;
        margin: 2rem auto;
        max-width: 1200px;
    }

    .auction-header {
        text-align: center;
        border-bottom: 2px solid var(--beige-dark);
        padding-bottom: 1.5rem;
        margin-bottom: 2rem;
    }

        .auction-header h1 {
            color: var(--brown-accent);
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
        }

    .auction-table {
        background-color: white;
        border-radius: 8px;
        overflow: hidden;
    }

        .auction-table th {
            background-color: var(--brown-accent);
            color: white;
            padding: 1rem;
            font-weight: 500;
        }

        .auction-table td {
            padding: 1rem;
            vertical-align: middle;
            border-bottom: 1px solid var(--beige-medium);
        }

        .auction-table tr:hover {
            background-color: var(--beige-light);
        }

    .btn-auction {
        background-color: var(--brown-accent);
        color: white;
        padding: 0.5rem 1.2rem;
        border: none;
        border-radius: 4px;
        transition: all 0.3s ease;
    }

        .btn-auction:hover {
            background-color: var(--brown-light);
            color: white;
            transform: translateY(-2px);
        }

    .auction-form {
        background-color: var(--beige-light);
        padding: 2rem;
        border-radius: 8px;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-control {
        border: 1px solid var(--beige-dark);
        padding: 0.75rem;
        border-radius: 4px;
    }

        .form-control:focus {
            border-color: var(--brown-accent);
            box-shadow: 0 0 0 0.2rem rgba(139, 115, 85, 0.25);
        }

    .btn-group-auction {
        display: flex;
        gap: 0.5rem;
    }

    .auction-link {
        color: var(--brown-accent);
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .auction-link:hover {
            color: var(--brown-light);
            text-decoration: underline;
        }

    .auction-card {
        background-color: white;
        border-radius: 8px;
        padding: 2rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
</style>