@* Create.cshtml *@
@model WebApplication3.Models.Inscripcion
@{
    ViewData["Title"] = "Nueva Inscripción";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h3 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Nueva Inscripción a Subasta</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="UsuarioId" class="form-label">
                        <i class="fas fa-user me-2"></i>Participante
                    </label>
                    <select asp-for="UsuarioId" class="form-select" asp-items="ViewBag.UsuarioId">
                        <option value="">-- Seleccione un participante --</option>
                    </select>
                    <span asp-validation-for="UsuarioId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SubastaId" class="form-label">
                        <i class="fas fa-gavel me-2"></i>Subasta
                    </label>
                    <select asp-for="SubastaId" class="form-select" asp-items="ViewBag.SubastaId">
                        <option value="">-- Seleccione una subasta --</option>
                    </select>
                    <span asp-validation-for="SubastaId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Volver
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check me-2"></i>Crear Inscripción
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>