@* Details.cshtml *@
@model WebApplication3.Controllers.InscripcionsController.InscripcionViewModel
@{
    ViewData["Title"] = "Detalles de Inscripción";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h3 class="mb-0"><i class="fas fa-info-circle me-2"></i>Detalles de la Inscripción</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-4">
                        <h5 class="text-muted"><i class="far fa-calendar-alt me-2"></i>Fecha de Inscripción</h5>
                        <p class="lead">@Model.FechaInscripcion.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-4">
                        <h5 class="text-muted"><i class="fas fa-gavel me-2"></i>Subasta</h5>
                        <p class="lead">@Model.TituloSubasta</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-4">
                        <h5 class="text-muted"><i class="fas fa-user me-2"></i>Participante</h5>
                        <p class="lead">@Model.NombreUsuario</p>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Volver
                </a>
                <a asp-action="Edit" asp-route-id="@Model.InscripcionId" class="btn btn-warning">
                    <i class="fas fa-edit me-2"></i>Editar
                </a>
            </div>
        </div>
    </div>
</div>
