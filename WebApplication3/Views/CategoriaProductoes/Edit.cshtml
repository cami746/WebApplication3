<!-- Edit.cshtml -->
@model WebApplication3.Models.CategoriaProducto
@{
    ViewData["Title"] = "Edit";
}
<div class="auction-container">
    <div class="auction-header">
        <h1>Editar Categoría</h1>
    </div>
    <div class="auction-content">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @if (Model != null)
                    {
                        <input type="hidden" asp-for="CategoriaProductoId" />
                    }
                    <div class="form-group mb-3">
                        <label asp-for="@Model!.Nombre" class="control-label">@Html.DisplayNameFor(model => model!.Nombre)</label>
                        <input asp-for="@Model!.Nombre" class="form-control" />
                        <span asp-validation-for="@Model!.Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="@Model!.Descripcion" class="control-label">@Html.DisplayNameFor(model => model!.Descripcion)</label>
                        <textarea asp-for="@Model!.Descripcion" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="@Model!.Descripcion" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="control-label">Imagen</label>
                        <input type="file" name="ImagenFile" class="form-control" accept="image/*" />
                        <input type="hidden" asp-for="@Model!.ImagenUrl" />
                        @if (!string.IsNullOrEmpty(Model?.ImagenUrl))
                        {
                            <div class="mt-2">
                                <img src="@Model.ImagenUrl" class="img-thumbnail" style="max-height: 200px" />
                            </div>
                        }
                    </div>
                    <div class="text-center mt-4">
                        <input type="submit" value="Guardar" class="btn btn-auction me-2" />
                        <a asp-action="Index" class="auction-link">Volver al Listado</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
}