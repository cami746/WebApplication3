<!-- Delete.cshtml -->
@model WebApplication3.Models.CategoriaProducto
@{
    ViewData["Title"] = "Delete";
}
<div class="auction-container">
    <div class="auction-header">
        <h1>Eliminar Categoría</h1>
        <h3>¿Está seguro que desea eliminar esta categoría?</h3>
    </div>
    <div class="auction-content">
        <div class="auction-details">
            <div class="row mb-4">
                @if (!string.IsNullOrEmpty(Model?.ImagenUrl))
                {
                    <div class="text-center">
                        <img src="@Model.ImagenUrl" class="img-fluid rounded" style="max-height: 300px" alt="@Model.Nombre" />
                    </div>
                }
            </div>
            <dl class="row">
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model!.Nombre)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model!.Nombre)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model!.Descripcion)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model!.Descripcion)</dd>
            </dl>
        </div>
        <form asp-action="Delete" class="text-center">
            <input type="hidden" asp-for="CategoriaProductoId" />
            <input type="submit" value="Eliminar" class="btn btn-danger me-2" />
            <a asp-action="Index" class="auction-link">Volver al Listado</a>
        </form>
    </div>
</div>